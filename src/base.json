{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Target-Disease-Association",
  "description": "Schema for different types of target-disease associations used by CTTV",
  "type": "object",
  "version": "1.2.2",
  "properties": {
    "sourceID": {
      "type": "string",
      "description": "A source ID (database or study ID) to help identify who this data is from.",
      "pattern": "^[a-z0-9_]+$"
    },
    
    "access_level": {
      "description": "Choose public as default; private is for internal datasets",
      "type": "string",
      "enum": [
        "public",
        "private"
      ]      
    },
    
    "validated_against_schema_version": {
      "description": "The CTTV-JSON schema version number against which your data was validated",
      "type": "string",
      "enum": [
        "1.2.2"
      ]
    },
    "unique_association_fields": {
      "description": "String based key-value properties that must uniquely identify each JSON object in your data.",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "target" : {
      "type": "object",
      "description" : "Target in CTTV's target ontology",
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/uniprot-schema-corrections/src/bioentity/target.json"
    },
    "disease" : {
      "type": "object",
      "description" : "Disease in the EFO ontology",
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/uniprot-schema-corrections/src/bioentity/disease.json"
    },
    "literature": {
      "type": "object",
      "properties": {
        "references": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/uniprot-schema-corrections/src/evidence/base.json#/definitions/single_lit_reference"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    }
  },
  "import_remote_schemas": [
    { "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/uniprot-schema-corrections/src/bioentity/base.json" }
  ]
}